if update %}
    connection: user=www-data password=www-data dbname=tiles host=localhost
    geoms:
    - sql: geom FROM update{%
endif %}

layers:
    hot_21781:
        mapfile: hotosm/mapnik.xml
        grid: 21781
    hot_2056:
        mapfile: hotosm/mapnik.xml
        grid: 2056
    osm_21781:
        mapfile: osm/mapnik.xml
        grid: 21781
    osm_2056:
        mapfile: osm/mapnik.xml
        grid: 2056
    mapbox_bright_21781:
        mapfile: OSMBright/mapnik.xml
        grid: 21781
    mapbox_bright_2056:
        mapfile: OSMBright/mapnik.xml
        grid: 2056
    mapbox_streets_21781:
        mapfile: mapbox-streets/open-streets/mapnik.xml
        grid: 21781
    mapbox_streets_2056:
        mapfile: mapbox-streets/open-streets/mapnik.xml
        grid: 2056

generation:
    default_cache: local
    authorised_user: www-data

mapcache:
    location: /mapcache

server:
    cache: local

openlayers:
    # srs, center_x, center_y [required]
    srs: epsg:2056
    center_x: 2600000
    center_y: 1200000
