grids:
    # grid name, I just recommends to add the min resolution because it's common to not generate all the layers at the same resolution.
    21781:
        # resolutions [required]
        resolutions: [1000, 500, 250, 100, 50, 20, 10, 5, 2, 1, 0.5]
        # bbox [required]
        bbox: [420000, 30000, 900000, 350000]
        # srs [required]
        srs: epsg:21781

    2056:
        # resolutions [required]
        resolutions: [1000, 500, 250, 100, 50, 20, 10, 5, 2, 1, 0.5]
        # bbox [required]
        bbox: [2420000, 130000, 2900000, 1350000]
        # srs [required]
        srs: epsg:2056

caches:
    local:
        type: bsddb
        folder: /var/sig/tilecache
        # for GetCapabilities
        http_url: https://%(host)s/%(folder)s
        hosts:
        - wmts0.<host>
        - wmts1.<host>
        - wmts2.<host>
        - wmts3.<host>
        - wmts4.<host>

# this defines some defaults values for all the layers
layer_default:
    type: mapnik
    output_format: png
    extension: png
    mime_type: image/png
    wmts_style: default
#    min_resolution_seed: 1
#    wms_url: http://localhost/osm/wms
    # the WMTS dimensions definition [default to []]
#    dimensions:
#        -   name: DATE
#            # the default value for the WMTS capabilities
#            default: 2012
#            # the generated value
#            value: 2012
#            # all the available values in the WMTS capabilities
#            values: [2012]
    meta: on
    meta_size: 4
    meta_buffer: 0
    data_buffer: 128
    # size and hash used to detect empty tiles and metatiles [optional, default to None]
#    empty_metatile_detection:
#        size: 740
#        hash: 3237839c217b51b8a9644d596982f342f8041546
#    empty_tile_detection:
#        size: 921
#        hash: 1e3da153be87a493c4c71198366485f290cad43c{%
if update %}
    connection: user=www-data password=www-data dbname=tiles host=localhost
    geoms:
    - sql: geom FROM update{%
endif %}

layers:
    hot_21781:
        mapfile: hotosm/mapnik.xml
        grid: 21781
    hot_2056:
        mapfile: hotosm/mapnik.xml
        grid: 2056
    osm_21781:
        mapfile: osm/mapnik.xml
        grid: 21781
    osm_2056:
        mapfile: osm/mapnik.xml
        grid: 2056
    mapbox_bright_21781:
        mapfile: mapbox-bright/mapnik.xml
        grid: 21781
    mapbox_bright_2056:
        mapfile: mapbox-bright/mapnik.xml
        grid: 2056
    mapbox_streets_21781:
        mapfile: mapbox-streets/mapnik.xml
        grid: 21781
    mapbox_streets_2056:
        mapfile: mapbox-streets/mapnik.xml
        grid: 2056

generation:
    default_cache: local
    authorised_user: www-data

mapcache:
    location: /mapcache

openlayers:
    # srs, center_x, center_y [required]
    srs: epsg:2056
    center_x: 2600000
    center_y: 1200000
